<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".SolutionCatagory">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <Button
        android:layout_below="@id/logo"
        android:id="@+id/Computer_Networking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF0000"
        android:background="#F0C183"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="সাধারণ জ্ঞান"/>


    <Button
        android:layout_below="@id/Computer_Networking"
        android:id="@+id/English"
        android:textColor="#FF0000"
        android:background="#F0C183"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="ইংলিশ"/>

    <Button
        android:layout_below="@id/English"
        android:id="@+id/বাংলা"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF0000"
        android:background="#F0C183"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="বাংলা"/>

    <Button
        android:layout_below="@id/বাংলা"
        android:id="@+id/Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#FF0000"
        android:background="#F0C183"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:text="Home"/>




</RelativeLayout>